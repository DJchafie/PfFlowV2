{% for interface in interfaces %}
interface {{ interface.interface_name }}
{% if interface.ingress == True %}
service-policy input {{ policy_in.name }}
{% elif  interface.egress == True %}
service-policy output {{ interface.policy_out_ref.name }}
{% elif  interface.wan == True %}
service-policy input {{ policy_in.name }}
service-policy output {{ interface.policy_out_ref.name }}
{% endif %}
{% endfor %}